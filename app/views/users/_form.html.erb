
<div class="container">
  <%= form_with(model: @user, class: "shadow p-3 mb-3 bg-info rounded") do |form| %>
    <div class="row justify-content-center">
      <div class= "col-10">
        <div class="form-group row">
          <%= form.label :username, style: "display: block", class: "col-2 col-form-label"%>
          <div class="col-10">
            <%= form.text_field :username, class: "form-control"%>
          </div>
        </div>
        <br>
        <div class="form-group row justify-content-center">
          <%= form.label :email, style: "display: block", class: "col-2 col-form-label"%>
          <div class="col-10">
            <%= form.email_field :email, class: "form-control shadow rounded"%>
          </div>
        </div>
        <br>
        <div class="form-group row justify-content-center">
          <%= form.label :password, style: "display: block", class: "col-2 col-form-label"%>
          <div class="col-10">
            <%= form.password_field :password, class: "form-control shadow rounded"%>
          </div>
        </div>
        <br>
        <div class="form-group row justify-content-center">
          <%= form.submit(@user.new_record? ? "Sign up" : "Update account", class:" btn btn-success") %>
        </div>
      <% end %>
    </div>
  </div>
  <%= link_to "Back to articles", articles_path, class:"row justify-content-center"%>
</div>