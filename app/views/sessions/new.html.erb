<h2 class="ui center aligned large header">
  Welcome to Funny Movies
</h2>

<h4 class="ui center aligned medium icon header">
  <i class="circular orange power off tiny icon"></i>
  Log in or register to continue
</h4>

<div class="ui placeholder segment">
  <div class="ui very relaxed stackable grid">
    <div class="column">
      <%= form_with(model: @user, html: {class: "ui form", role: "form"}, url: login_path) do |f| %>
        <div class="field">
          <%= f.label :username, "Username" %>
          <div class="ui left icon input">
            <%= f.text_field :username, require: true, placeholder: "Username" %>
            <i class="user icon"></i>
          </div>
          <div class="message_error">
            <%= render 'shared/errors', obj: f.object, field: :username %>
          </div>
        </div>

        <div class="field">
          <%= f.label :password, "Password" %>
          <div class="ui left icon input">
            <%= f.password_field :password, require: true, placeholder: "Password" %>
            <i class="lock icon"></i>
          </div>
          <div class="message_error">
            <%= render 'shared/errors', obj: f.object, field: :password %>
          </div>

        </div>

        <%= f.submit "Login/Register", class: "ui orange submit button" %>
      <% end %>
    </div>

  </div>

</div>

